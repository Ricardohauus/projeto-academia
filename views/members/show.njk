{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background:url({{member.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Instrutor</div>
        <div>{{member.name}}</div>
      </div>
      <div class="item">
        <div>Idade</div>
        <div>{{member.age}}</div>
      </div>
      <div class="item">
        <div>Sexo</div>
        <div>{{member.gender}}</div>
      </div>
      <div class="item">
        <div>Desde</div>
        <div>{{member.created_at}}</div>
      </div>

      <a class="button" href="/members/edit/{{member.id}}">Editar</a>
    </section>
  </div>

{% endblock %}