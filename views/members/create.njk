{% extends "layout.njk" %}

{% block content %}
  <form method="POST" {% if members.id != null %} action="/members?_method=PUT" {% endif %}>
    <div class="card">
      <section class="avatar" style="background:url(https://source.unsplash.com/collection/3465564/400x400) no-repeat center center / cover"></section>

      <section class="details">
        {% if members.id != null %}
          <input type="hidden" name="id" value="{{members.id}}">
          <h3>Editar Membro</h3>
        {% else %}
          <h3>Novo Membro</h3>
        {% endif %}
        <div class="item">
          <div>Avatar</div>
          <div><input type="url" name="avatar_url" placeholder="http://" required="required" value="{{members.avatar_url}}"></div>
        </div>

        <div class="item">
          <div>Membro</div>
          <div><input type="text" name="name" placeholder="Nome do Membro" value="{{members.name}}"></div>
        </div>

        <div class="item">
          <div>Data de Nascimento
            {{members.birth}}</div>
          <div><input type="date" name="birth" value="{{members.birth}}"></div>
        </div>

        <div class="item">
          <div>Sexo</div>
          <div>
            <span>
              <input type="radio" name="gender" checked="checked" value="M">
              Masculino
            </span>
            <span>
              <input type="radio" name="gender" {% if members.gender == "F" %} checked="checked" {% endif %} value="F">
              Feminino
            </span>

          </div>
        </div>

        <div class="item">
          <div>Área de Atuação</div>
          <div>
            <input type="text" name="services" value="{{members.services}}" placeholder="Separe os serviços prestados por virgula">
          </div>
        </div>

        <button type="submit">
          {% if members.id == null %}
            Salvar
          {% else %}
            Editar
          {% endif %}
        </button>

      </form>
      <form id="form-delete" method="POST" action="/members?_method=DELETE">
        <input type="hidden" name="id" value="{{members.id}}">
        <button type="submit">
          Deletar
        </button>
      </form>
    </section>
  </div>

{% endblock %}